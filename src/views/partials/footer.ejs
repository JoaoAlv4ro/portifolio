<footer class="bg-emerald-950 text-white text-center py-8 mt-10">
    <p>&copy; <%= new Date().getFullYear() %> <%= (data && data.presentation && data.presentation.fullName) || 'Seu Nome' %>. Todos os direitos reservados.</p>
    <div id="social" class="mt-3">
        <p class="text-sm text-emerald-200">Siga-me nas redes sociais:</p>
        <% const socials = (data && data.socialLinks) || []; %>
        <% if (socials.length) { %>
            <ul class="flex justify-center gap-4 mt-2">
                <% socials.forEach(s => { %>
                    <li>
                        <a href="<%= s.href %>" target="_blank" class="inline-flex items-center gap-2 text-white/90 hover:text-white transition">
                            <% if (s.iconClass) { %><i class="<%= s.iconClass %> text-4xl"></i><% } %>
                            <span class="sr-only"><%= s.name %></span>
                        </a>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>
</footer>